<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blogs For All", "Index", "Blog", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Create Posts", "Create", "Blog")</li>
                    <li>@Html.ActionLink("Search", "Search", "Blog")</li>
                </ul>

                <div style="right:5px;margin-right: 10px;margin-left: 10px;float: right;margin-top: 10px;">
                    <input type="search" name="searchText" id="searchText" style="height: 34px;padding: 6px 12px;font-size: 14px;line-height: 1.428571429;color: #555555;vertical-align: middle;  background-color: #ffffff;border: 1px solid #cccccc;border-radius: 4px;" autocomplete="off" size="100" />
                    <button class="btn btn-default" onclick="Search();">Search</button>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script type="text/javascript">
        $("#searchText").keyup(function (event) {
             if (event.keyCode == 13) {
                Search();
             }
        });


        function Search() {
           var searchText = $("#searchText").val();
           window.location.href = '/Blog/Search?searchText=' + searchText;
        }
 </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
